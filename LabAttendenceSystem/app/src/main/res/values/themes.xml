<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LabAttendanceSystem" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.LabAttendanceSystem.NoActionBar" parent="Theme.LabAttendanceSystem">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LabAttendanceSystem.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LabAttendanceSystem.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PageTitle" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SessionDetailTitle" parent="PageTitle" />

    <style name="CheckInTableTitle" parent="TextAppearance.MaterialComponents.Headline5" />

    <style name="TableCell">
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TableCellTextView" parent="TableCell">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">0</item>
    </style>

    <style name="TableRow">
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TableHeaderCell" parent="TableCell">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TableHeaderCellTextView" parent="TableCellTextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TableHeaderRow" parent="TableRow">
        <item name="android:layout_height">56dp</item>
    </style>
</resources>